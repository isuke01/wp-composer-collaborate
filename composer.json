{
    "name" : "ComposerWordpressTest",
    "description" : "This is wordpress composer installation with custom setup, easy to collaborate.",
    "repositories":[
        {
            "type":"composer",
            "url":"https://wpackagist.org"
        },
        {
          "type": "package",
          "package": {
              "name": "advanced-custom-fields/advanced-custom-fields-pro",
              "version": "5.6.7",
              "type": "wordpress-plugin",
              "dist": {
                "type": "zip",
                "url": "https://connect.advancedcustomfields.com/index.php?p=pro&a=download"
              },
              "require": {
                "philippbaschke/acf-pro-installer": "^1.0",
                "composer/installers": "^1.0"
              }
          }
        }
    ],
    "scripts" : {

    },
    "require": {
      "php": ">=5.6",
      "vlucas/phpdotenv": "^2.2",
      "johnpbloch/wordpress": "^4.8",
      "advanced-custom-fields/advanced-custom-fields-pro": "^5.6.0",
      "wpackagist-plugin/acf-to-rest-api": "^3.0.0",
      "wpackagist-plugin/w3-total-cache" : "^0.9.5.4"
    },
    "extra": {
      "wordpress-install-dir": "system",
      "installer-paths": {
        "modules/plugins/{$name}/": ["type:wordpress-plugin"],
        "modules/themes/{$name}/": ["type:wordpress-theme"],
        "modules/mu-plugin/{$name}/": ["type:wordpress-muplugin"]
      }
    }
  }